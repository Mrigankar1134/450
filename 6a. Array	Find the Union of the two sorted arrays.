// { Driver Code Starts
//Initial template for C++

#include <bits/stdc++.h>
using namespace std;



// { Driver Code Starts.

int main() {
	
	int t;
	cin >> t;
	
	while(t--){
	    //  Union
	    int n, m;
	    cin >> n >> m;
	    int a[n], b[m];
	    unordered_map<int,int> map;
	    for(int i = 0;i<n;i++){
	       cin >> a[i];
	       map[a[i]]++;
	    }
	       
	    for(int i = 0;i<m;i++){
	       cin >> b[i];
	       map[b[i]]++;
	    }
	    cout<<map.size();
	    
	}
	
	return 0;
}  // } Driver Code Ends
